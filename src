import random

def adivinhar_numero():
    numero_secreto = random.randint(1, 100)
    tentativas = 0
    while True:
        chute = int(input("advinhe o numero (1, 100): "))
        tentativas += 1
        if chute < numero_secreto:
            print("Muito baixo!")
        elif chute > numero_secreto:
            print("Muito alto!")
        else:
            print(f"ParabÃ©ns!Voce adivinhou em {tentativas} tentativas.")
            break
          
adivinhar_numero()
